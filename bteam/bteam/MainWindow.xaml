<Window x:Class="bteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bteam"
        mc:Ignorable="d"
        Title="Event BG" Height="450" Width="525" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Images/back.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid Margin="0,0,0,9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Real Time" FontWeight="Bold" FontSize="40" FontFamily="Snap ITC" Grid.Row="0" Grid.Column="1" RenderTransformOrigin="0.795,1.036" Grid.ColumnSpan="2" />
        <TextBlock Text="Progress" FontWeight="Bold" FontSize="60" FontFamily="Snap ITC"  Grid.Row="0" Grid.Column="1" RenderTransformOrigin="1.581,0.977" Grid.ColumnSpan="2" Margin="0,50,50,36" />
        <Button x:Name="login" Click="login_Click"  HorizontalAlignment="Left"  VerticalAlignment="Top" Width="197" Height="105" FontWeight="Bold" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Margin="25,35,0,0">
            <Button.Effect>
                <DropShadowEffect BlurRadius="3" Opacity="0.6"/>
            </Button.Effect>
            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center">Login</TextBlock>
        </Button>
    </Grid>
</Window>
